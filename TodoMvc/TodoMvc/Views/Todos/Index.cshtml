@model List<TodoMvc.Models.TodoItem>

@{
    ViewData["Title"] = "To Do List";
}

<div class="container" style="max-width: 720px;">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h2 class="m-0">To Do List</h2>
        <a class="btn btn-primary" asp-action="Create">Add task</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light text-center">
            No tasks yet.
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var item in Model)
            {
                <div class="list-group-item">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="me-3 flex-grow-1">
                            <div class="fw-semibold @(item.IsDone ? "text-decoration-line-through text-muted" : "")">
                                @item.Title
                            </div>

                            <div class="small text-muted mt-1">
                                @if (item.DueDate.HasValue)
                                {
                                    <span class="badge bg-light text-dark">
                                        Due @item.DueDate.Value.ToString("ddd MMM d yyyy")
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-secondary">
                                        No due date
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="d-flex flex-wrap gap-2 align-items-center">
                            <!-- Toggle Done / Undo -->
                            <form asp-action="Toggle" asp-route-id="@item.Id" method="post" class="m-0">
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                        class="btn btn-sm @(item.IsDone ? "btn-outline-secondary" : "btn-success")">
                                    @(item.IsDone ? "Undo" : "Done")
                                </button>
                            </form>

                            <!-- Set Due Date -->
                            <form asp-action="SetDueDate" asp-route-id="@item.Id"
                                  method="post"
                                  class="m-0 d-flex align-items-center">
                                @Html.AntiForgeryToken()
                                <input type="date"
                                       name="dueDate"
                                       class="form-control form-control-sm me-2"
                                       value="@(item.DueDate?.ToString("yyyy-MM-dd"))" />
                                <button type="submit"
                                        class="btn btn-sm btn-outline-primary">
                                    Set
                                </button>
                            </form>

                            <!-- Delete -->
                            <form asp-action="Delete" asp-route-id="@item.Id"
                                  method="post"
                                  class="m-0"
                                  onsubmit="return confirm('Delete this task?');">
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                        class="btn btn-sm btn-outline-danger">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
